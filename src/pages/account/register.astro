---
import Layout from '../../layouts/Layout.astro';
import RegisterPage from '../../components/RegisterPage';

const title = "Register"
const description = "Register an account to manage your orders, track deliveries and access your order history."
---

<Layout title={title} description={description}>
	<RegisterPage client:only />
</Layout>

<script>
	import { DecodeCookie } from '../../components/DecodeCookie';
	import { initVisit } from '../../stores/visit';

	const authToken = DecodeCookie()

	if(authToken) {
		window.location.href = "/account"
	} else {
		initVisit();
	}
</script>